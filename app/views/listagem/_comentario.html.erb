<div class="row">
  <button class="btn btn-primary" type="button" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
    Adicionar Comentário
  </button>
  <div class="collapse" id="collapseExample">
    <div class="well">
      <%= form_for(@comentarioNovo) do |f| %>
        <% if @comentarioNovo.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@comentarioNovo.errors.count, "error") %> prohibited this comentarioNovo from being saved:</h2>
            <ul>
            <% @comentarioNovo.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-group">
          <%= f.label :mensagem %><br>
          <%= f.text_area :mensagem, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :nome %><br>
          <%= f.text_field :nome, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :email %><br>
          <%= f.text_field :email, class: "form-control" %>
        </div>
        <div class="actions">
          <%= f.submit %>
          
        </div>
      <% end %>
     
    </div>
  </div>
</div> <!-- row ## adicionar comentário -->

<% @comentariosListagem.each do |comentario| %>
  <div class="media col-sm-offset-1">
      <div class="media-body">
        <h4 class="media-heading"><%= comentario.nome %> <span class=""> &rtrif;  </span> <%= comentario.email %></h4>
        <p><%= comentario.mensagem %></p>
      </div>
  </div>
<% end %>
